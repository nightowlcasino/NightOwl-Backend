{
    "compilerOptions": {
      "target": "es6",
      "lib": [
        "dom",
        "dom.iterable",
        "esnext"
      ],
      "outDir": "./dist",
      "noImplicitAny": true,
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "resolveJsonModule": true,
      "isolatedModules": true
    },
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules",
      "**/*.test.ts",
      "./node_modules",
      "./node_modules/*",
    ],
  }
   